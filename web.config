<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Prevent directory browsing -->
        <directoryBrowse enabled="false" />
        
        <!-- Add security headers -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;" />
                <add name="Referrer-Policy" value="same-origin" />
            </customHeaders>
        </httpProtocol>
        
        <!-- URL Rewrite rules -->
        <rewrite>
            <rules>
                <!-- Redirect to HTTPS -->
                <rule name="HTTP to HTTPS" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="^OFF$" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Deny access to sensitive files -->
        <security>
            <requestFiltering>
                <hiddenSegments>
                    <add segment="README.md" />
                    <add segment="package.json" />
                    <add segment="obfuscate.js" />
                    <add segment="minify.js" />
                    <add segment="integrate-protection.js" />
                    <add segment="server.js" />
                    <add segment="node_modules" />
                </hiddenSegments>
                <fileExtensions>
                    <add fileExtension=".json" allowed="false" />
                    <add fileExtension=".md" allowed="false" />
                </fileExtensions>
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>
